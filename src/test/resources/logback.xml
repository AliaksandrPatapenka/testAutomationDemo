<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Консоль с цветами -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%cyan(%t)] %yellow(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый вывод (без цветов) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/test.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень по умолчанию для всех пакетов -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Настройки для конкретных пакетов (каждый ОДИН раз) -->
    <logger name="base" level="DEBUG"/>
    <logger name="page" level="DEBUG"/>
    <logger name="helpers" level="DEBUG"/>
    <logger name="test" level="DEBUG"/>
</configuration>